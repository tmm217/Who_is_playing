<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <ul>
      <% if @current_user.blank? %>
        <li>
          <a href="/user_sign_in">
            Sign in
          </a>
        </li>

        <li>
          <a href="/user_sign_up">
            Sign up
          </a>
        </li>
      <% else %>
        <li>
          <a href="/venues_by_city">
            Cities
          </a>
        </li>
        
        <li>
          <a href="/users/<%= @current_user.username %>/venues">
            My Venues and Shows
          </a>
        </li>
        <li>
          <a href="/edit_user_profile">
            <%= @current_user.username %>
          </a>
        </li>

        <li>
          <a href="/user_sign_out">
            Sign out
          </a>
        </li>
      <% end %>
    </ul>

    <% if notice.present? %>
      <div>
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div>
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
