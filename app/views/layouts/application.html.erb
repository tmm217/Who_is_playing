<!DOCTYPE html>
<html>
  <head>
    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Connect Font Awesome stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">

    <!-- Connect Bootstrap stylesheet -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- Connect Bootstrap JavaScript and its dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <ul>
      <% if @current_user.blank? %>
        <li>
          <a href="/user_sign_in">
            Sign in
          </a>
        </li>

        <li>
          <a href="/user_sign_up">
            Sign up
          </a>
        </li>
      <% else %>
        <li>
          <a href="/cities">
            Cities
          </a>
        </li>
        
        <li>
          <a href="/venues_and_shows">
            My Venues and Shows
          </a>
        </li>
        <li>
          <a href="/edit_user_profile">
            <%= @current_user.username %>
          </a>
        </li>

        <li>
          <a href="/user_sign_out">
            Sign out
          </a>
        </li>
      <% end %>
    </ul>

    <% if notice.present? %>
      <div>
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div>
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
