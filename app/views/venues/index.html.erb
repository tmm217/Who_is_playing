<div class="row mb-3">
  <div class="col-md-12">
    <h3>
      Cities
    </h3>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <% @venues.distinct.pluck(:city).each do |venue| %>
      <ul>
        <li>
          <a href="/cities/<%= venue %>"><%= venue %></a>
        </li>
      </ul>
      <% end %>
  </div>
</div>
